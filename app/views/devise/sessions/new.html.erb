<div class="login-container">
  <h2 class="login-title">Đăng nhập</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="field">
      <%= f.label :email, "Tên tài khoản", class: "login-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input" %>
    </div>

    <div class="field">
      <%= f.label :"Mật khẩu", nil, class: "login-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "login-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field login-remember">
        <%= f.check_box :remember_me, class: "login-checkbox" %>
        <%= f.label :remember_me, nil, class: "login-remember-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Đăng nhập", class: "login-submit" %>
    </div>
  <% end %>

  <div class="login-links">
    Bạn chưa có tài khoản<%= render "devise/shared/links" %>
  </div>
</div>
